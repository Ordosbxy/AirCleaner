<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@android:color/white">
    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/sl_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <Button
                android:id="@+id/btn_share_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="@string/device_delete"
                android:background="@android:color/holo_red_dark"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/tv_share_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="0000"
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@+id/tv_share_account"
                android:textColor="@color/login_text_color2"/>
            <TextView
                android:id="@+id/tv_share_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="0000"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_marginRight="15dp"
                android:textColor="@color/login_text_color2"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/login_bg_color2"
               android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>